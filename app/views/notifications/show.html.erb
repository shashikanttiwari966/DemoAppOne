<div class="container"> 
  <div class="row m-0"> 
    <div class="col-md-12 col-12"> 
      <div class="row"> 
        <div class="col-12 mb-4"> 
          <div class="row box-right"> 
            <div class="col-md-8 ps-0 "> 
              <p class="ps-3 textmuted fw-bold h6 mb-4">
                <%= link_to 'DOWNLOAD PDF', notification_path(@notification, format: :pdf) %>
              </p>
              <p class="ps-3 textmuted fw-bold h6 mb-0">TOTAL AMOUNT</p> 
              <p class="h1 fw-bold d-flex"> 
                <span class=" fas fa-dollar-sign textmuted pe-1 h6 align-text-top mt-1">
                </span>
                <%= @notification&.params[:params].present? ? @notification&.params[:params][0][:price] : 0 %> 
              </p>
              </div> <div class="col-md-4"> 
                <p class="p-blue" style="text-align: center;"> 
                  <!-- <span class="fas fa-circle pe-2"></span> -->
                  Scan QR for Details.
                </p> 
                  <p class="fw-bold mb-3">

                    <img src= <%= @png.to_s %> alt="Red dot" style="width: 170px;height: 170px;"/>
                  </p>  
                </div> 
              </div> 
            </div>
            <div class="col-12 px-0"> 
              <div class="box-right"> 
                <div class="d-flex mb-2"> 
                  <p class="fw-bold"><%= @notification.params[:message]%></p> 
                  <p class="ms-auto textmuted">
                    <span class="fas fa-times"></span>
                  </p> 
                </div> 
                <div class="d-flex mb-2">
                  <!-- <p class="ms-auto bg btn btn-primary p-blue h8">
                    <span class="far fa-clone pe-2"></span>COPY PAYMENT LINK 
                  </p>  -->
                </div> 
                <div class="row"> 
                  <div class="col-12 mb-2"> 
                    <p class="textmuted h8">Plan / Product</p> 
                    <p class="mb-2"><%= @notification&.params[:params].present? ? @notification&.params[:params][0][:name] : nil %></p> 
                  </div> 
                  <div class="col-6"> 
                    <p class="textmuted h8">Payment Date</p> 
                    <p class="mb-3">
                      <%= @notification&.params[:params].present? ? @notification&.params[:params][0][:created_at].strftime("%B %d, %y") : nil %>
                    </p> 
                  </div> 
                  <div class="col-6"> 
                    <p class="textmuted h8">Due on</p> 
                    <p class="mb-3">Oct 25, 2020</p> 
                  </div> 
                </div> 
              </div> 
            </div> 
          </div> 
        </div> 
      </div>
    </div> 
  </div> 
</div>
