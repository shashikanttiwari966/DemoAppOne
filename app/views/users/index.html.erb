<div class="form_wrapper">
  <div class="form_container">
    <div class="title_container">
      <h2>Responsive Registration Form</h2>
    </div>
    <div class="row clearfix">
      <div class="">
        <%= form_for @user do |f| %>
          <div class="input_field"> <span><i aria-hidden="true" class="fa fa-envelope"></i></span>
            <%= f.text_field :email, name:"email", placeholder:"Email" %>
          </div>
          <div class="input_field"> <span><i aria-hidden="true" class="fa fa-lock"></i></span>
            <%= f.text_field :password, name:"password", placeholder:"Password" %>
          </div>
          <!-- div class="input_field"> <span><i aria-hidden="true" class="fa fa-lock"></i></span>
            <%#= f.text_field :password, name:"password", placeholder:"Re-type Password" %>
          </div> -->
          <div class="row clearfix">
            <div class="col_half">
              <div class="input_field"> <span><i aria-hidden="true" class="fa fa-user"></i></span>
                <%= f.text_field :first_name, name:"first_name", placeholder:"First Name" %>
              </div>
            </div>
            <div class="col_half">
              <div class="input_field"> <span><i aria-hidden="true" class="fa fa-user"></i></span>
                <%= f.text_field :last_name, name:"last_name", placeholder:"Last Name" %>
              </div>
            </div>
          </div>
          <%= f.submit "Register", class:"button", type:"submit", value:"Register" %>
        <%end%>
      </div>
    </div>
  </div>
</div>